{
  "name": "developer-knowledge-base",
  "version": "1.0.0",
  "description": "Personal knowledge base desktop app for developers",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:win": "vite build && electron-builder --win",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test"
  },
  "keywords": [
    "electron",
    "knowledge-base",
    "notes"
  ],
  "author": "Fabian Birk",
  "license": "MIT",
  "build": {
    "appId": "com.knowledgebase.app",
    "productName": "AthenaNotes",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "ressources/favicon.ico",
        "to": "icon.ico"
      },
      {
        "from": "ressources/favicon-256x256.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "ressources/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "marked": "^17.0.1",
    "uuid": "^13.0.0",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@vitest/ui": "^4.0.16",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "happy-dom": "^20.1.0",
    "semantic-release": "^25.0.2",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.16"
  }
}
