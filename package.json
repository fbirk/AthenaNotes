{
  "name": "developer-knowledge-base",
  "version": "1.0.0",
  "description": "Personal knowledge base desktop app for developers",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:win": "vite build && electron-builder --win",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test"
  },
  "keywords": [
    "electron",
    "knowledge-base",
    "notes"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.knowledgebase.app",
    "productName": "Developer Knowledge Base",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron": "^39.2.7",
    "marked": "^17.0.1",
    "uuid": "^13.0.0",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/ui": "^4.0.16",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "happy-dom": "^20.1.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.16"
  }
}
